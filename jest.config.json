{
	"testTimeout": 60000,
	"verbose": true,
	"testEnvironment": "node",
	"collectCoverage": false,
	"collectCoverageFrom": [
		"index.js",
		"lib/**/*.js",
		"!lib/**/*.test.js",
		"!test/**/*"
	],
	"coverageDirectory": "coverage",
	"coverageReporters": [
		"text",
		"lcov",
		"html"
	],
	"coverageThreshold": {
		"global": {
			"branches": 80,
			"functions": 80,
			"lines": 80,
			"statements": 80
		}
	},
	"testMatch": [
		"**/test/**/*.test.js"		
	],
	"setupFilesAfterEnv": [
		"<rootDir>/test/setup.js"
	]
}